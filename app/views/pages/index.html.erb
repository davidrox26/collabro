<% if !user_signed_in? %>
        <style>
        body {
            background: linear-gradient( /* somewhat transparent film on top of the BG to make it look darker. */
                rgba(0,0,0, 0.7),
                rgba(0,0,0, 0.7)
                ), url("/studio.jpg") no-repeat center center fixed
            
            ; /* only display once, center horizontal and vertical, dont let scroll change position. */
            -webkit-background-size: cover;
            -moz-background-size: cover; /* cover the whole html element. */
            -o-background-size: cover;
            background-size: cover;
        }
        h1 {
            color: white;
            font-weight: bold;
        }
        .container-index {
            margin-right: 15%;
            margin-left: 15%;
        }
        .text {
            color: white;
            font-weight: 200;
            font-size: 150%;
        }
        .footer-links {
            text-align: center;
            color: white;
            margin-top: 30%;
            font-size: 75%;
        }
        .log-in {
            float: right;
            width: 300px;
            height: 150px;
            margin-top: 7.5%;
        }
        .sign-up {
            float: right;
            width: 300px;
            height: 250px;
        }
        .log-in-form {
            margin: 5px;
        }
    </style>
    <div class="container-index row">
        <div class="col-sm-6">
            <h1>Collab Bro?</h1>
            <p class="text">
                CollabBro is the perfect way for you to keep up to date, discover, and connect with fellow musicians and producers in your local area!<br>
                Let your friends know how your progress on that new track is going!<br>
                Find others around you that are free to collaborate!<br>
                And most of all, make friends and have fun!
            </p>
        </div>
        <div class="col-sm-6">
                   <div class="log-in panel">
                       <h1>Log In</h1>
                       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
                    </div> 
        </div
        <div class="col-sm-6"
            <div class="sign-up panel">
                        Sign Up
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <%= devise_error_messages! %>
                        <div class="field">
                            <%= f.label :username %><br />
                            <%= f.text_field :username, autofocus:true %>
                        </div>
                        <div class="field">
                            <%= f.label :email %><br />
                            <%= f.email_field :email %>
                          </div>
                           <div class="field">
                            <%= f.label :password %>
                            <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "off" %>
                          </div>
                          
                           <div class="field">
                            <%= f.label :password_confirmation %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "off" %>
                          </div>
  
                          <div class="actions">
                            <%= f.submit "Sign Up" %>
                          </div>
                        
            </div>
        </div>
        <div class="col-sm-12">
            <p class="footer-links">Â© 2016 CollabBro</p>
        </div>
        
   
    <% end %>
<% else %>

<script>document.location = "/home"</script>

<% end %>

<%= render "devise/shared/links" %>

